{
	"name": "focus-full",
	"version": "0.1",
	"description": "A productivity tool to add to your toolbox",
	"permissions": [
		"activeTab",
		"storage",
		"declarativeContent"
	],
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"css": [
				"new-style.css"
			],
			"js": [
				"background.js"
			]
		}
	],
	"browser_action": {
		"default_icon": {
			"16": "imgs/default16.png",
			"32": "imgs/default32.png",
			"48": "imgs/default48.png",
			"64": "imgs/default64.png"
		}
	},
	"icons": {
		"16": "imgs/default16.png",
		"32": "imgs/default32.png",
		"48": "imgs/default48.png",
		"64": "imgs/default64.png"
	},



	"manifest_version": 2
}
